            <?python
            franchise_itt = ''
            franchise_pe = ''
            carence_pe = ''
            type_ipt = ''
            type_ippro = ''
            for s in [s for option in contract.get_all_options() for s in option.get_shares_at_date(contract.initial_start_date) if s.loan == loan and s.share]:
                if s.extra_data_string.get('franchise_itt_slade', None):
